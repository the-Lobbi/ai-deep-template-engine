# =============================================================================
# REQUIRED - Core LLM
# =============================================================================

# Anthropic API Key (for Claude Sonnet 4.5)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-...

# =============================================================================
# Harness Configuration
# =============================================================================
HARNESS_ACCOUNT_ID=your_account_id_here
HARNESS_API_URL=https://app.harness.io/gateway
HARNESS_API_TOKEN=your_api_token_here
HARNESS_ORG_IDENTIFIER=default
HARNESS_PROJECT_IDENTIFIER=your_project_id

# Agent Configuration
ENABLED_SUBAGENTS=iac-golden-architect,container-workflow,team-accelerator
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000
LOG_LEVEL=INFO

# Optional: LangChain/LangGraph
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=deep-agent-harness

# =============================================================================
# RAG Configuration (Retrieval-Augmented Generation)
# =============================================================================

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp
DEVOPS_KB_INDEX_NAME=devops-knowledge-base

# Voyage AI Embeddings (recommended by Anthropic for Claude)
VOYAGE_API_KEY=your-voyage-api-key-here

# Optional: Web Search (for web_search tool)
TAVILY_API_KEY=your-tavily-api-key

# =============================================================================
# Observability Configuration
# =============================================================================

# Prometheus Metrics
PROMETHEUS_URL=http://prometheus:9090

# AlertManager Alerts
ALERTMANAGER_URL=http://alertmanager:9093

# Log Aggregation (choose one backend)
LOG_BACKEND=loki  # Options: loki, elasticsearch

# Loki Configuration
LOKI_URL=http://loki:3100

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=  # Optional: for basic auth
ELASTICSEARCH_PASSWORD=  # Optional: for basic auth
ELASTICSEARCH_INDEX_PATTERN=logs-*  # Index pattern to search

# =============================================================================
# Kubernetes Configuration
# =============================================================================
# If not running in-cluster, ensure KUBECONFIG is set or ~/.kube/config exists
# KUBECONFIG=/path/to/kubeconfig
